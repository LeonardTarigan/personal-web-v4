---
import { Image } from "astro:assets";
import { getCollection, type CollectionEntry } from "astro:content";
import BaseLayout from "../layouts/BaseLayout.astro";
import MainLayout from "../layouts/MainLayout.astro";
import RelativeTime from "../components/shared/time/RelativeTime.vue";

const blogs: CollectionEntry<"blogs">[] = await getCollection("blogs");
const sortedBlogs = blogs.sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime(),
);
---

<BaseLayout title="Blogs | Leonard Tarigan">
  <MainLayout name="BLOG" pronounciation="ブログ">
    <p slot="box" class="p-3">Est. 2025</p>
    <section slot="content" class="w-full max-w-screen-sm px-3">
      <div class="flex flex-col gap-3">
        {
          sortedBlogs.map(({ data, slug, body }) => (
            <a
              href={`/blogs/${slug}`}
              class="flex flex-col-reverse gap-4 border border-neutral-800 p-3 transition-colors duration-300 hover:bg-neutral-200 sm:h-40 sm:flex-row md:grid md:grid-cols-10"
            >
              <div class="col-span-7 flex !h-full grow basis-[70%] flex-col justify-between text-sm">
                <div>
                  <div class="flex items-center capitalize gap-2 pb-2 text-xs">
                    {data.categories.map((category) => (
                      <p class="border border-neutral-500 font-medium py-1 px-2">{category}</p>
                    ))}
                  </div>
                  <h3 class="line-clamp-1 text-lg font-semibold leading-tight">
                    {data.title}
                  </h3>
                  <p class="mt-1 line-clamp-2 leading-tight">{body}</p>
                </div>
                <p class="pt-3 font-normal text-neutral-400">
                  <RelativeTime client:load date={data.date} />
                </p>
              </div>
              <Image
                src={data.image}
                alt={"Thumb"}
                inferSize
                class={
                  "col-span-3 aspect-[4/3] w-full shrink-0 basis-[30%] bg-neutral-200 object-cover sm:aspect-auto sm:h-full"
                }
                transition:name={data.title}
              />
            </a>
          ))
        }
      </div>
    </section>
  </MainLayout>
</BaseLayout>
